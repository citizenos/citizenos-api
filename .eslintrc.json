{
    "plugins":  ["mocha"],
    "env": {
        "jest": true,
        "node": true,
        "mocha": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 11
    },
    "extends": ["eslint:recommended", "plugin:mocha/recommended"],
    "ignorePatterns": ["node_modules/", "dist/", "build/", "coverage/", "public/uploads/", "!**/node_modules/"],
    "rules": {
        "no-multi-spaces": ["error"]
    }
}